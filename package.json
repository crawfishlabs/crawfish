{
  "name": "claw-platform-security",
  "version": "1.0.0",
  "description": "Comprehensive security infrastructure for Claw applications",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "security:sast": "node security/llm-security-review.js",
    "security:sca": "node security/dependency-audit.js",
    "security:secrets": "node security/secret-scanner.js",
    "security:logs": "node security/log-analyzer.js",
    "security:remediate": "node security/auto-remediate.js",
    "security:audit:weekly": "node security/scheduled-audit.js weekly",
    "security:audit:monthly": "node security/scheduled-audit.js monthly",
    "security:audit:quarterly": "node security/scheduled-audit.js quarterly",
    "security:install-hooks": "node security/secret-scanner.js --install-pre-commit",
    "security:full-scan": "npm run security:sast && npm run security:sca && npm run security:secrets"
  },
  "keywords": [
    "security",
    "sast",
    "sca",
    "llm",
    "vulnerability",
    "scanning",
    "remediation",
    "audit"
  ],
  "author": "Claw Security Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "firebase-admin": "^12.1.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-validator": "^7.0.1",
    "dompurify": "^3.0.5",
    "jsdom": "^23.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.6",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "semgrep": "^1.45.0",
    "secretlint": "^8.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}