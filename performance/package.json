{
  "name": "@claw/performance-tools",
  "version": "1.0.0",
  "description": "Performance monitoring, benchmarking, and auto-optimization tools for Claw apps",
  "main": "dist/index.js",
  "bin": {
    "benchmark": "dist/benchmark.js",
    "auto-optimize": "dist/auto-optimize.js",
    "metric-collector": "dist/jobs/metric-collector.js",
    "performance-review": "dist/jobs/performance-review.js",
    "auto-fix": "dist/jobs/auto-fix.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start:benchmark": "node dist/benchmark.js",
    "start:auto-optimize": "node dist/auto-optimize.js",
    "start:metric-collector": "node dist/jobs/metric-collector.js",
    "start:performance-review": "node dist/jobs/performance-review.js",
    "start:auto-fix": "node dist/jobs/auto-fix.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "firebase-admin": "^12.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "performance",
    "monitoring",
    "benchmarking",
    "optimization",
    "firebase",
    "claw"
  ],
  "author": "Claw Team",
  "license": "MIT"
}